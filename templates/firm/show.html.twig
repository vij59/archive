{% extends 'base.html.twig' %}

{% block title %}Firm{% endblock %}


{% block body %}
    <h1>Firm</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ firm.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ firm.name }}</td>
            </tr>
            <tr>
                <th>Siren</th>
                <td>{{ firm.siren }}</td>
            </tr>
            <tr>
                <th>ImmatriculationCity</th>
                <td>{{ firm.immatriculationCity }}</td>
            </tr>
            <tr>
                <th>ImmatriculationDate</th>
                <td>{{ firm.immatriculationDate ? firm.immatriculationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Capital</th>
                <td>{{ firm.capital }}</td>
            </tr>
            <tr>
                <th>Addresses</th>
                <td>
                    {% for address in firm.address %}
                        {{ address.number }}
                        {{ address.wayType }}
                        {{ address.wayName }}
                        {{ address.city }}
                        {{ address.zipCode }}
                        <br/>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Snapshot</th>
                <td>

                       <pre>
</pre>
                    {% for snap in firm.snapshots %}
                        {{ snap.name }}
                        {{ snap.legalForm }}
                        {{ snap.immatriculationDate ? firm.immatriculationDate|date('Y-m-d H:i:s') : '' }}

                    {% endfor %}
                </td>

            </tr>
        </tbody>
    </table>

    <a href="{{ path('firm_index') }}">back to list</a>

    <a href="{{ path('firm_edit', {'id': firm.id}) }}">edit</a>

    {{ include('firm/_delete_form.html.twig') }}
{% endblock %}
